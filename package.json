{
  "name": "guess-the-movie",
  "version": "1.0.0",
  "description": "Movie guessing game",
  "main": "server.js",
  "scripts": {
    "prebuild": "node generate-manifests.js",
    "build": "vite build && node scripts/copy-assets.js",
    "preview": "vite preview",
    "sync": "node sync-data.js",
    "consolidate": "node consolidate-movies.js",
    "consolidate:cleanup": "node consolidate-movies.js --cleanup",
    "dev": "vite",
    "dev:ngrok": "node ./scripts/dev-ngrok.js",
    "deploy": "npm run build && gh-pages -d dist",
    "cf:deploy": "npm run build && wrangler pages deploy dist",
    "cf:worker:deploy": "wrangler deploy",
    "cf:worker:tail": "wrangler tail",
    "cf:worker:trigger": "wrangler deploy --test-scheduled"
  },
  "engines": {
    "node": ">=18.x"
  },
  "dependencies": {
    "concurrently": "^8.2.0",
    "dotenv": "^16.4.7",
    "dropbox": "^10.34.0",
    "express": "^4.21.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.1.9",
    "vite": "^6.2.1",
    "vite-express": "^0.20.0"
  },
  "devDependencies": {
    "ngrok": "^5.0.0-beta.2"
  }
}
